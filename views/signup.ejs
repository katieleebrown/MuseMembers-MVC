<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description"
        content="MuseMembers is a museum and cultural institution membership management system. Designed to give users more access to institutions and increase membership retention and museum visits.">
    <meta name="keywords" content="museum membership, membership management, crm">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MuseMembers Signup</title>

    <!-- Bootstrap & Stylesheets -->

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
        integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/main.min.css">
    <link rel="stylesheet" href="/css/style.css">

    <!-- Fonts & Icons -->
    <link
        href="https://fonts.googleapis.com/css2?family=Source+Sans+3:ital,wght@0,300;0,400;0,500;0,600;0,700;1,400&family=Voltaire&display=swap"
        rel="stylesheet">
    <link rel="icon" href="/images/BlackArtLogoMini.png">
    <script src="https://kit.fontawesome.com/8745b435ef.js" crossorigin="anonymous"></script>
</head>

<body class="d-flex flex-column min-vh-100">
    <%- include('partials/header') -%>

        <!-- Signup Form -->
        <section class="p-5 p-lg-5 pt-lg-5 text-center text-sm-start">
            <div class="container">
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el=> { %>
                        <div class="alert alert-danger">
                            <%= el.msg %>
                        </div>
                        <% }) %>
                            <% } %>
                                <form action="/signup" method="POST">
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="name">Name:</label>
                                            <input type="text" name="name" class="form-control bg-light"
                                                placeholder="Jane Doe">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="email">Email:</label>
                                            <input type="email" name="email" class="form-control bg-light"
                                                placeholder="Email">
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="password">Password:</label>
                                            <input type="password" name="password" class="form-control bg-light"
                                                placeholder="Password">
                                            <small id="passwordInfo" class="form-text text-muted">Passwords should be at
                                                least 8 characters in length.</small>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="confirmPassword">Confirm Password:</label>
                                            <input type="password" name="confirmPassword" class="form-control bg-light"
                                                placeholder="Confirm Password">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="address">Address Line 1:</label>
                                        <input type="text" name="address" class="form-control bg-light"
                                            placeholder="Address Line 1">
                                    </div>
                                    <div class="form-group">
                                        <label for="aptNum">Apt, Suite, or Floor:</label>
                                        <input type="text" name="aptNum" class="form-control bg-light"
                                            placeholder="Address Line 2">
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="city">City: </label>
                                            <input type="text" name="city" class="form-control bg-light"
                                                placeholder="City">
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label for="state">State:</label>
                                            <input type="text" name="state" class="form-control bg-light"
                                                placeholder="State">
                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="zipcode">Zipcode:</label>
                                            <input type="number" name="zipcode" class="form-control bg-light"
                                                placeholder="Zipcode">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="phone">Phone:</label>
                                        <input type="number" name="phone" class="form-control bg-light"
                                            placeholder="(123)456-7890">
                                    </div>

                                    <input type="submit" class="btn btn-primary btn-lg shadow voltaire my-2 py-1">
                                </form>
            </div>
        </section>

        <%- include('partials/footer') -%>
</body>

</html>